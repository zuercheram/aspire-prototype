{
  "$schema": "https://json.schemastore.org/aspire-8.0.json",
  "resources": {
    "apsire-prototype-dev-app-insights": {
      "type": "azure.bicep.v0",
      "connectionString": "{apsire-prototype-dev-app-insights.outputs.appInsightsConnectionString}",
      "path": "apsire-prototype-dev-app-insights.module.bicep",
      "params": {
        "logAnalyticsWorkspaceId": ""
      }
    },
    "apsire-prototype-dev-sql-server": {
      "type": "container.v0",
      "connectionString": "Server={apsire-prototype-dev-sql-server.bindings.tcp.host},{apsire-prototype-dev-sql-server.bindings.tcp.port};User ID=sa;Password={apsire-prototype-dev-sql-server-password.value};TrustServerCertificate=true",
      "image": "mcr.microsoft.com/mssql/server:2022-latest",
      "env": {
        "ACCEPT_EULA": "Y",
        "MSSQL_SA_PASSWORD": "{apsire-prototype-dev-sql-server-password.value}",
        "APPLICATIONINSIGHTS_CONNECTION_STRING": "{apsire-prototype-dev-app-insights.connectionString}"
      },
      "bindings": {
        "tcp": {
          "scheme": "tcp",
          "protocol": "tcp",
          "transport": "tcp",
          "targetPort": 1433
        }
      }
    },
    "apsire-prototype-dev-sql-database": {
      "type": "value.v0",
      "connectionString": "{apsire-prototype-dev-sql-server.connectionString};Database=apsire-prototype-dev-sql-database"
    },
    "apsire-prototype-dev-secrets": {
      "type": "azure.bicep.v0",
      "connectionString": "{apsire-prototype-dev-secrets.outputs.vaultUri}",
      "path": "apsire-prototype-dev-secrets.module.bicep",
      "params": {
        "principalId": "",
        "principalType": ""
      }
    },
    "apsire-prototype-dev-migrations": {
      "type": "project.v0",
      "path": "../Domain.Migrations/Aspire.Prototype.Domain.Migrations.csproj",
      "env": {
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EXCEPTION_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EVENT_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_RETRY": "in_memory",
        "ConnectionStrings__apsire-prototype-dev-sql-database": "{apsire-prototype-dev-sql-database.connectionString}",
        "APPLICATIONINSIGHTS_CONNECTION_STRING": "{apsire-prototype-dev-app-insights.connectionString}"
      }
    },
    "apsire-prototype-dev-server": {
      "type": "project.v0",
      "path": "../Server/Aspire.Prototype.Server.csproj",
      "env": {
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EXCEPTION_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EVENT_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_RETRY": "in_memory",
        "ASPNETCORE_FORWARDEDHEADERS_ENABLED": "true",
        "HTTP_PORTS": "{apsire-prototype-dev-server.bindings.http.targetPort}",
        "ConnectionStrings__apsire-prototype-dev-secrets": "{apsire-prototype-dev-secrets.connectionString}",
        "ConnectionStrings__apsire-prototype-dev-sql-database": "{apsire-prototype-dev-sql-database.connectionString}",
        "APPLICATIONINSIGHTS_CONNECTION_STRING": "{apsire-prototype-dev-app-insights.connectionString}"
      },
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http",
          "external": true
        },
        "https": {
          "scheme": "https",
          "protocol": "tcp",
          "transport": "http",
          "external": true
        }
      }
    },
    "apsire-prototype-dev-react": {
      "type": "dockerfile.v0",
      "path": "../Client/Dockerfile",
      "context": "../Client",
      "env": {
        "NODE_ENV": "development",
        "services__apsire-prototype-dev-server__http__0": "{apsire-prototype-dev-server.bindings.http.url}",
        "services__apsire-prototype-dev-server__https__0": "{apsire-prototype-dev-server.bindings.https.url}",
        "APPLICATIONINSIGHTS_CONNECTION_STRING": "{apsire-prototype-dev-app-insights.connectionString}",
        "PORT": "{apsire-prototype-dev-react.bindings.http.targetPort}",
        "BROWSER": "none"
      },
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http",
          "targetPort": 8000,
          "external": true
        }
      }
    },
    "apsire-prototype-dev-sql-server-password": {
      "type": "parameter.v0",
      "value": "{apsire-prototype-dev-sql-server-password.inputs.value}",
      "inputs": {
        "value": {
          "type": "string",
          "secret": true,
          "default": {
            "generate": {
              "minLength": 22,
              "minLower": 1,
              "minUpper": 1,
              "minNumeric": 1
            }
          }
        }
      }
    }
  }
}